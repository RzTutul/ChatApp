<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sendmsgbg"
    tools:context=".IncomingCallFrag">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:src="@drawable/myimage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTV"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rz Tutul"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="30dp"
        android:textColor="@color/colorBalck"
        />
    <ImageView
        android:id="@+id/receiveBtn"
        android:padding="10dp"
        android:background="@drawable/round_bg"
        android:layout_margin="80dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_call_24"
        />
      <ImageView
          android:visibility="gone"
        android:id="@+id/videoRecvBtn"
        android:padding="10dp"
        android:background="@drawable/round_bg"
        android:layout_margin="80dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_videocam_24"
        />


    <ImageView
        android:id="@+id/cancelBtn"
        android:padding="10dp"
        android:background="@drawable/round_bg_red"
        android:layout_margin="80dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_cancel_24"
        />



</androidx.constraintlayout.widget.ConstraintLayout>